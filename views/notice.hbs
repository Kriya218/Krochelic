{{> nav}}

<div class="col">
  <div class="d-flex my-5 justify-content-center">
    <div class="card p-2 row col-md-4">
      <div class="d-flex justify-content-end"><a href="/profile/{{signInUser}}" class="btn-close"></a></div>
      <h5 class="modal-title d-flex justify-content-center mb-3">Notices</h5>
      <ul class="d-flex mx-auto row" style="overflow-y: auto; max-height: 30em;">
        {{#each notices}}
        <li class="mb-4">
          <div class="d-flex align-items-center">
            <span>
              <img src="{{pathCheck this.User.image}}" class="profile-img me-3" style="width: 40px;" alt="profile photo">
            </span>
            <div class="pe-1">{{this.User.name}} {{this.description}}</div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>